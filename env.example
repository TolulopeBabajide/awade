# Awade Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/awade_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_MINUTES=60

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id

# Test User Configuration (for development only)
ADMIN_EMAIL=admin@awade.com
ADMIN_PASSWORD=admin123
EDUCATOR_EMAIL=educator@awade.com
EDUCATOR_PASSWORD=educator123

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@awade.com 