# CORS Configuration (Test domains)
ALLOWED_ORIGINS=https://awade-test.vercel.app,http://localhost:3000,http://localhost:5173

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
JWT_EXPIRES_MINUTES=60

# Test User Configuration
ADMIN_EMAIL=admin-test@awade.com
ADMIN_PASSWORD=admin123
EDUCATOR_EMAIL=educator-test@awade.com
