{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://awade-backend-test.onrender.com/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://awade-backend-test.onrender.com"
  }
}
